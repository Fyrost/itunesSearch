<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
>
    <data>

        <variable
                name="viewmodel"
                type="com.example.myapplication.ui.itunes.description.DescriptionViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="18dp"
                android:layout_marginStart="16dp"
                android:id="@+id/constraintLayout">

            <TextView
                    android:id="@+id/textView_kind_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="@{viewmodel.kind}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_genre_description"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="8dp"
                    android:text="@{viewmodel.primaryGenreName}"
                    app:layout_constraintStart_toStartOf="@+id/textView_kind_description"
                    app:layout_constraintTop_toBottomOf="@+id/textView_kind_description"
                    tools:text="2019"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="128dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/constraintLayout">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_year_description"
                    android:textColor="@color/colorAccent"
                    android:text="@{viewmodel.releaseDate}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_price_description"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="8dp"
                    android:text="@{viewmodel.trackPrice}"
                    app:layout_constraintStart_toStartOf="@+id/textView_year_description"
                    app:layout_constraintTop_toBottomOf="@+id/textView_year_description"
                    tools:text="$ 0.99"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:lineSpacingExtra="9sp"
                android:text="ARTIST"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/constraintLayout"
                app:layout_constraintStart_toStartOf="@id/constraintLayout"
                tools:text="ARTIST"/>
        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:lineSpacingExtra="5sp"
                android:text="@{viewmodel.artistName}"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Christopher Nolan"/>
        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:lineSpacingExtra="9sp"
                android:text="DESCRIPTION"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:text="DESCRIPTION"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:lineSpacingExtra="6sp"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam imperdiet, sapien et fringilla vulputate, enim orci dignissim nibh, non tristique sapien dui finibus ex. Maecenas aliquet viverra odio, ac aliquam eros convallis ut. Vestibulum ut urna consequat quam condimentum porta. Quisque ac erat metus. Fusce eu pulvinar orci. Praesent iaculis maximus arcu vitae tempus. Sed venenatis, dolor vitae porta accumsan, tellus arcu commodo ex, at convallis risus libero ac arcu. "
                android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>