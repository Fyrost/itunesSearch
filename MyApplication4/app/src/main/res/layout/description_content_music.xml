<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:id="@+id/constraintLayout">

        <TextView
                android:id="@+id/textView_genre_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="PG-13"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_price_description"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/textView_genre_description"
                app:layout_constraintTop_toBottomOf="@+id/textView_genre_description"
                tools:text="2019"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraintLayout">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_textView"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="ACTION"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/year_textView"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="@+id/rating_textView"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rating_textView"
                tools:text="$ 0.99"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:lineSpacingExtra="9sp"
            android:text="ARTIST"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout"
            app:layout_constraintStart_toStartOf="@id/constraintLayout"
            tools:text="ARTIST"/>
    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:lineSpacingExtra="5sp"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Christopher Nolan"/>
    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:lineSpacingExtra="9sp"
            android:text="DESCRIPTION"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:text="DESCRIPTION"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:lineSpacingExtra="6sp"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            tools:text="Something"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/textView"/>

</androidx.constraintlayout.widget.ConstraintLayout>